    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initCharts();
            setupEventListeners();
        });

        function setupEventListeners() {
            // Refresh button
            document.getElementById('refresh-btn').addEventListener('click', function() {
                showToast('Success', 'Data refreshed successfully!');
                refreshCharts();
            });

            // Export button
            document.getElementById('export-btn').addEventListener('click', function() {
                showToast('Export Started', 'Your data is being exported...');
            });

            // Share button
            document.getElementById('share-btn').addEventListener('click', function() {
                showToast('Link Copied', 'Dashboard link copied to clipboard!');
            });

            // Date range selector
            document.getElementById('date-range').addEventListener('change', function() {
                refreshCharts();
            });
        }

        function initCharts() {
            initUsersChart();
            initTrafficChart();
            initDevicesChart();
        }

        function initUsersChart() {
            const ctx = document.getElementById('users-chart').getContext('2d');
            
            // More realistic user activity data with a growth trend
            const labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
            const data = {
                labels: labels,
                datasets: [{
                    label: 'Active Users',
                    data: [3245, 3578, 3912, 3768, 4125, 4876, 5230],
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            };

            window.usersChart = new Chart(ctx, {
                type: 'line',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(255, 255, 255, 0.9)',
                            titleColor: '#1F2937',
                            bodyColor: '#6B7280',
                            borderColor: '#E5E7EB',
                            borderWidth: 1,
                            padding: 10,
                            boxPadding: 5,
                            usePointStyle: true
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 4],
                                color: '#E5E7EB'
                            },
                            ticks: {
                                callback: function(value) {
                                    if (value >= 1000) {
                                        return (value / 1000).toFixed(1) + 'k';
                                    }
                                    return value;
                                }
                            }
                        }
                    }
                }
            });

            // Event listeners for changing time period
            document.querySelectorAll('[data-chart="users"]').forEach(button => {
                button.addEventListener('click', function() {
                    const period = this.getAttribute('data-period');
                    updateUsersChart(period);
                    
                   // Update active button
                    document.querySelectorAll('[data-chart="users"]').forEach(btn => {
                        btn.classList.remove('bg-blue-500', 'text-white');
                        btn.classList.add('bg-gray-100', 'text-gray-700');
                    });
                    
                    // Set active button
                    this.classList.remove('bg-gray-100', 'text-gray-700');
                    this.classList.add('bg-blue-500', 'text-white');
                });
            });
        }

        function updateUsersChart(period) {
            let labels, data;
            
            switch(period) {
                case 'day':
                    labels = ['12am', '4am', '8am', '12pm', '4pm', '8pm', '11pm'];
                    data = [1245, 2458, 4512, 3952, 4215, 5125, 3845];
                    break;
                case 'week':
                    labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
                    data = [3245, 3578, 3912, 3768, 4125, 4876, 5230];
                    break;
                case 'month':
                    labels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
                    data = [22540, 25780, 28950, 32150];
                    break;
            }
            
            window.usersChart.data.labels = labels;
            window.usersChart.data.datasets[0].data = data;
            window.usersChart.update();
        }

        function initTrafficChart() {
            const ctx = document.getElementById('traffic-chart').getContext('2d');
            
            const data = {
                labels: ['Search', 'Direct', 'Social', 'Email', 'Referral'],
                datasets: [{
                    data: [38, 24, 18, 12, 8],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(139, 92, 246, 0.8)',
                        'rgba(239, 68, 68, 0.8)'
                    ],
                    borderWidth: 0
                }]
            };

            window.trafficChart = new Chart(ctx, {
                type: 'doughnut',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '65%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                padding: 15,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.9)',
                            titleColor: '#1F2937',
                            bodyColor: '#6B7280',
                            borderColor: '#E5E7EB',
                            borderWidth: 1,
                            padding: 10,
                            boxPadding: 5,
                            usePointStyle: true,
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
        }

        function initDevicesChart() {
            const ctx = document.getElementById('devices-chart').getContext('2d');
            
            const data = {
                labels: ['Mobile', 'Desktop', 'Tablet'],
                datasets: [{
                    data: [58, 32, 10],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)'
                    ],
                    borderWidth: 0
                }]
            };

            window.devicesChart = new Chart(ctx, {
                type: 'pie',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                padding: 15,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.9)',
                            titleColor: '#1F2937',
                            bodyColor: '#6B7280',
                            borderColor: '#E5E7EB',
                            borderWidth: 1,
                            padding: 10,
                            boxPadding: 5,
                            usePointStyle: true,
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
        }

        function refreshCharts() {
            // Add slight animation for refreshing
            document.querySelectorAll('.chart-container').forEach(container => {
                container.classList.add('animate-pulse');
                setTimeout(() => {
                    container.classList.remove('animate-pulse');
                }, 1000);
            });
            
            // Update charts with new random data
            setTimeout(() => {
                updateRandomChartData(window.usersChart);
                updateRandomChartData(window.trafficChart);
                updateRandomChartData(window.devicesChart);
            }, 500);
        }

        function updateRandomChartData(chart) {
            if (!chart) return;
            
            // Generate new random data that's close to the original values
            const originalData = [...chart.data.datasets[0].data];
            const newData = originalData.map(value => {
                // Add or subtract up to 15% randomly
                const changePercent = (Math.random() * 30 - 15) / 100;
                return Math.max(value * (1 + changePercent), 0);
            });
            
            chart.data.datasets[0].data = newData;
            chart.update();
        }

        function showToast(title, message) {
            const toast = document.getElementById('toast');
            document.getElementById('toast-title').innerText = title;
            document.getElementById('toast-message').innerText = message;
            
            toast.classList.remove('hidden', 'translate-y-10', 'opacity-0');
            toast.classList.add('translate-y-0', 'opacity-100');
            
            setTimeout(hideToast, 3000);
        }

        function hideToast() {
            const toast = document.getElementById('toast');
            toast.classList.remove('translate-y-0', 'opacity-100');
            toast.classList.add('translate-y-10', 'opacity-0');
            
            setTimeout(() => {
                toast.classList.add('hidden');
            }, 300);
        }
    </script>
</body>
</html>
